# Server Environment Variables

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Allowed Origins (comma-separated for production)
# ALLOWED_ORIGINS=https://lumixar.online,https://min-stream.click

# Database Configuration (if using external DB in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=streaming_app
# DB_USER=admin
# DB_PASSWORD=secure_password

# Rate Limiting (optional overrides)
# AUTH_RATE_LIMIT=5
# REGISTER_RATE_LIMIT=3
# API_RATE_LIMIT=100
# UPLOAD_RATE_LIMIT=20

# Security
# ENABLE_RATE_LIMITING=true
# ENABLE_CSRF_PROTECTION=true
# SESSION_SECRET=your-session-secret-here

# Logging
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# Payment Configuration
# BTC_NETWORK=mainnet
# SOLANA_NETWORK=mainnet-beta

# File Upload
# MAX_FILE_SIZE=10737418240
# UPLOAD_DIR=./uploads

# Web Push Notifications (optional)
# Generate with: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=your_public_key_here
# VAPID_PRIVATE_KEY=your_private_key_here
# VAPID_EMAIL=mailto:admin@yourdomain.com

# VPN Detection API (optional)
# VPN_API_KEY=your_vpn_api_key

# EPG Source (optional)
# EPG_SOURCE_URL=https://iptv-org.github.io/epg/guides/

# Load Balancer Configuration
# PRIMARY_SERVER_URL=http://localhost:3001
# SECONDARY_SERVER_URL=http://localhost:3002

# Backup Settings
# BACKUP_RETENTION_DAYS=30
# AUTO_BACKUP_INTERVAL_HOURS=24

# IMPORTANT SECURITY NOTES:
# 1. Never commit .env files to version control
# 2. Use strong, randomly generated secrets in production
# 3. Rotate secrets regularly
# 4. Use environment-specific configurations
# 5. Limit access to .env files (chmod 600)
