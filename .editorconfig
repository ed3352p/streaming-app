# EditorConfig - Configuration pour maintenir un style de code coh√©rent
# https://editorconfig.org

root = true

# Tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Fichiers JavaScript/JSX
[*.{js,jsx,mjs,cjs}]
indent_size = 2

# Fichiers JSON
[*.json]
indent_size = 2

# Fichiers Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Fichiers YAML
[*.{yml,yaml}]
indent_size = 2

# Fichiers Shell
[*.sh]
indent_size = 2
end_of_line = lf

# Package.json
[package.json]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
